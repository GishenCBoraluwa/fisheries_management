{
  "name": "fisheries-management-api",
  "version": "1.0.0",
  "description": "Fisheries Management System Backend with Node.js, Express, and PostgreSQL",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "db:migrate:docker": "docker-compose exec app npx prisma migrate dev",
    "db:seed:docker": "docker-compose exec app npm run db:seed",
    "db:studio:docker": "docker-compose exec app npx prisma studio"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.18.3",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.20.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "fisheries",
    "management",
    "nodejs",
    "express",
    "postgresql",
    "prisma",
    "typescript",
    "api",
    "crud",
    "weather",
    "pricing",
    "optimization"
  ],
  "author": "Gishen Boraluwa",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "axios": "^1.12.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.1",
    "node-cron": "^3.0.3",
    "prisma": "^6.16.1",
    "wait-on": "^8.0.5"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
